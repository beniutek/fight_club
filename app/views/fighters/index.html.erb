
<h1 class="text-center">Listing Fighters</h1>

<% @fighters.each do |fighter| %>


    <div class="row wrapper">
      <div class="col-sm-4 portfolio-item">
        <%= image_tag(fighter.image.normal.url, class: "img-responsive circle-image") unless fighter.image.nil? %>
      </div>

      <div class="col-sm-4">
        <div class="row">
          <h3>
            <%= link_to fighter.nickname, fighter_path(fighter) %>
          </h3>
          <p>
            <%= "#{fighter.first_name} #{fighter.last_name}" %> | <%= "#{fighter.fights_won.count} fights won" %>
          </p>
        </div>
        <div class="row">
          <ul>
            <% fighter.fighter_skills.each do |fskill| %>
              <li><%= fskill.skill.name+" "+fskill.value.to_s %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
<% end %>

<%= link_to 'New Fight', new_fight_path %>
