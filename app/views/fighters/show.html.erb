<p id="notice"><%= notice %></p>

<div class="container">
    <div class="row wrapper">
      <div class="col-sm-4 portfolio-item">
        <a href="#">
            <%= (image_tag @fighter.image.normal.url) unless @fighter.image.nil? %>
        </a>
      </div>

      <div class="col-sm-4">
        <div class="row">
          <h3>
            <%= link_to @fighter.nickname, fighter_path(@fighter) %>
          </h3>
          <p><%= "#{@fighter.first_name} #{@fighter.last_name}" %></p>
        </div>
        <div class="row">
          <ul>
            <% @fighter.fighter_skills.each do |fskill| %>
              <li><%= fskill.skill.name+" "+fskill.value.to_s %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

<%= link_to 'Edit', edit_fighter_path(@fighter) %> |
