

  <h1 class="text-center">Listing Fights</h1>

  <% @fights.each.with_index(1) do |fight, i| %>



    <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header text-center">#<%= i %></h1>
      </div>
    </div>

    <div class="row wrapper">
      <div class="col-sm-2 portfolio-item">
        <%= image_tag(fight.fighters.first.image.normal.url, class: "img-responsive circle-image") unless fight.fighters.first.image.nil? %>
        <h3>
            <%= link_to fight.fighters.first.nickname, fighter_path(fight.fighters.first) %>
        </h3>
        <p><%= "#{fight.fighters.first.first_name} #{fight.fighters.first.last_name}" %></p>
      </div>

      <div class="col-sm-2">
        <h2 class="text-center">VS</h2>
      </div>

      <div class="col-sm-2 portfolio-item">
            <%= image_tag(fight.fighters.last.image.normal.url, class: "img-responsive circle-image") unless fight.fighters.last.image.nil? %>
        <h3>
          <%= link_to fight.fighters.last.nickname, fighter_path(fight.fighters.last) %>
        </h3>
        <p><%= "#{fight.fighters.last.first_name} #{fight.fighters.last.last_name}" %></p>
      </div>
    </div>

<% end %>

<%= link_to 'New Fight', new_fight_path %>
